{% schema %}
{
  "name": "Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to our store!"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover our amazing products."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link",
      "default": "/collections/all"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show Overlay",
      "default": true
    }
  ],
        "presets":[
          {
            "name":"Custom-bannerrr",
              "category":"Custom"
          }     
    ]
}
{% endschema %}


<section class="banner">
<img src="{{ section.settings.banner_image | img_url: '1600x' }}" alt="{{ section.settings.heading }}">
  {% if section.settings.show_overlay %}
<div class="overlay">
<div class="banner-content">
<h1>{{ section.settings.heading }}</h1>
<p style="background-color : aqua">{{ section.settings.subtext }}</p>
<a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
</div>
</div>
  {% else %}
<div class="content">
<h1>{{ section.settings.heading }}</h1>
<p>{{ section.settings.subtext }}</p>
<a href="{{ section.settings.button_link }}" class="btn">{{ section.settings.button_text }}</a>
</div>
  {% endif %}
</section>

<style>
  .banner {
    position: relative;
    text-align: center;
    margin-bottom: 10px;
  }
  .banner img {
    width: 100%;
    height: 500px;
    display: block;
  }
  .banner .overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0);
    display: flex;
    justify-content: center;
    align-items: center;
    color: black;
    padding: 20px;
  }
  .banner .content, .banner .banner-content {
    max-width: 300px;
    margin: 0 auto;
    text-align: center;
  }
  .banner h1 {
    font-size: 2.5em;
    margin: 0 0 10px;
    color : blue;
    font-family: poppins;
  }
  .banner p {
    font-size: 1.2em;
    margin: 0 0 20px;
  }
  .banner .btn {
    display: inline-block;
    background-color: #ffffff;
    color: #000000;
    padding: 10px 20px;
    text-decoration: none;
    border-radius: 5px;
    font-size: 1em;
    transition: background-color 0.3s, color 0.3s;
  }
  .banner .btn:hover {
    background-color: black;
    color: #ffffff;
  }
</style>
